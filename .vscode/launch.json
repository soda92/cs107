    "version": "0.2.0",
    "configurations": [
        {
            "name": "imdb-test",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/assn-2-six-degrees/build/imdb-test.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/TDM-GCC-64/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                },
                {
                    "description": "Do not print version number on startup",
                    "text": "--quiet",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build"
        }
    ]
}